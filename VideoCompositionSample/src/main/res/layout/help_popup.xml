<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/white"
    >

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        >

        <dev.chromeos.videocompositionsample.presentation.ui.custom.CustomTextView
            android:id="@+id/tvDecoderFallback"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingStart="@dimen/main_margin_24dp"
            android:paddingEnd="@dimen/main_margin_24dp"
            android:paddingTop="@dimen/main_margin_24dp"
            android:textColor="@color/black"
            app:isHtml="true"
            android:text="@string/help__decoder_fallback"
            />

        <dev.chromeos.videocompositionsample.presentation.ui.custom.CustomTextView
            android:id="@+id/tvEffects"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="@dimen/main_margin_24dp"
            android:textColor="@color/black"
            app:isHtml="true"
            android:text="@string/help__effects"
            />

    </LinearLayout>

</ScrollView>